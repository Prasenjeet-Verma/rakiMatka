<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Login - Global Intergold</title>
  <link rel="stylesheet" href="/css/admin.css">
</head>

<body>
  <div class="main-container">
    <div class="login-section">
      <div class="login-box">
        <h2>Welcome, Admin</h2>
        <form action="/admin/login" method="POST">

          <% if (errors.length> 0) { %>
            <div class="error-messages">
              <% errors.forEach(error=> { %>
                <p class="error">
                  <%= error %>
                </p>
                <% }) %>
            </div>
            <% } %>
              <input type="text" name="login" placeholder="Phone or Username" value="<%= oldInput.login %>" required>
              <input type="password" name="password" placeholder="Password" value="<%= oldInput.password %>" required>
            
              <label class="remember-container">
                <input type="checkbox" /> Remember Me
              </label>

              <button type="submit" class="sign-in-btn">Sign In</button>
              <!-- <a href="admindashbord.html">pass</a> -->
        </form>
      </div>
    </div>
    <div class="image-section"></div>
  </div>
</body>

</html>