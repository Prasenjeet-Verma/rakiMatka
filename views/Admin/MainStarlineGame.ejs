<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin | Starline Games</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
    />
  </head>

  <body class="flex min-h-screen">
    <!-- SIDEBAR -->
    <aside
      id="sidebar"
      class="sidebar border-r border-gray-200 fixed inset-y-0 left-0 z-50 lg:relative lg:translate-x-0 transform -translate-x-full lg:block"
    >
      <div class="p-4">
        <div class="relative mb-4">
          <input
            type="text"
            placeholder="Search"
            class="w-full bg-white border border-gray-300 rounded px-3 py-2 text-sm"
          />
          <button
            class="absolute right-0 top-0 bottom-0 px-3 bg-neutral-800 text-white rounded-r"
          >
            <i class="fas fa-search"></i>
          </button>
        </div>
      </div>

      <%- include('../partials/adminNav') %>
    </aside>

    <!-- MAIN -->
    <main class="flex-1 flex flex-col min-w-0 overflow-hidden">
      <%- include('../partials/adminHeader') %>

      <!-- BODY -->
      <section class="bg-gray-100 p-4">
        <div class="bg-white rounded-lg shadow-lg p-4">

          <!-- TOP BAR -->
          <div class="flex justify-between items-center mb-4">
            <h2 class="text-lg font-semibold text-gray-700">
              ⭐ Starline Games
            </h2>

            <button
              onclick="openModal()"
              class="bg-yellow-500 hover:bg-yellow-600 text-white px-5 py-2 rounded"
            >
              Add Starline Game
            </button>
          </div>

          <!-- PAGINATION -->
          <div class="flex justify-between items-center mb-4">
            <div>
              Show
              <select id="pageLimit" onchange="changeLimit()">
                <option value="10" <%= limit == 10 ? "selected" : "" %>>10</option>
                <option value="50" <%= limit == 50 ? "selected" : "" %>>50</option>
                <option value="80" <%= limit == 80 ? "selected" : "" %>>80</option>
              </select>
              entries
            </div>

            <div class="flex gap-2">
              <% if (page > 1) { %>
                <a href="?page=<%= page-1 %>&limit=<%= limit %>"
                   class="px-3 py-1 bg-gray-200 rounded">
                  Previous
                </a>
              <% } %>

              <span class="px-3 py-1">
                Page <%= page %> of <%= totalPages %>
              </span>

              <% if (page < totalPages) { %>
                <a href="?page=<%= page+1 %>&limit=<%= limit %>"
                   class="px-3 py-1 bg-gray-200 rounded">
                  Next
                </a>
              <% } %>
            </div>
          </div>

          <!-- TABLE -->
          <div class="overflow-x-auto">
            <table class="min-w-[1200px] w-full border text-sm">
              <thead class="bg-gray-200">
                <tr>
                  <th class="border px-4 py-2 text-left">Starline Market</th>
                  <% ["Monday","Tuesday","Wednesday","Thursday","Friday","Saturday","Sunday"].forEach(d => { %>
                    <th class="border px-4 py-2"><%= d %></th>
                  <% }) %>
                </tr>
              </thead>

              <tbody>
                <% if (games.length === 0) { %>
                  <tr>
                    <td colspan="8" class="text-center p-6 text-gray-500">
                      No Starline Games Found
                    </td>
                  </tr>
                <% } %>

                <% games.forEach(game => { %>
                  <tr class="bg-gray-50">

                    <!-- MARKET NAME -->
                    <td class="border p-3 space-y-2">
                      <p class="font-semibold"><%= game.gameName %></p>

                      <div class="flex gap-2">
                        <button
                          onclick="openEditModal('<%= game._id %>','all','starline')"
                          class="bg-blue-500 text-white px-3 py-1 rounded text-xs"
                        >
                          Edit All
                        </button>

                        <form
                          action="/admin/game/delete/<%= game._id %>/starline"
                          method="POST"
                        >
                          <button
                            class="bg-red-500 text-white px-3 py-1 rounded text-xs"
                          >
                            Delete
                          </button>
                        </form>
                      </div>
                    </td>

                    <% ["monday","tuesday","wednesday","thursday","friday","saturday","sunday"].forEach(day => {
                      const d = game.schedule[day] || {};
                    %>
                      <td class="border p-3 text-center space-y-1">
                        <% if (d.isActive) { %>
                          <span class="bg-green-500 text-white px-2 py-1 text-xs rounded">Active</span>
                        <% } else { %>
                          <span class="bg-red-500 text-white px-2 py-1 text-xs rounded">Inactive</span>
                        <% } %>

                        <p>Open: <%= d.openTime || "--" %></p>
                        <p>Close: <%= d.closeTime || "--" %></p>

                        <button
                          onclick="openEditModal('<%= game._id %>','<%= day %>','starline')"
                          class="bg-yellow-500 text-white px-2 py-1 rounded"
                        >
                          ✏️
                        </button>
                      </td>
                    <% }) %>

                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </section>

      <!-- ADD MODAL -->
      <div id="addModal" class="fixed inset-0 hidden bg-black/40 flex items-center justify-center z-50">
        <form
          action="/admin/game/add/starline"
          method="POST"
          class="bg-white w-full max-w-xl rounded shadow"
        >
          <div class="px-6 py-4 border-b flex justify-between">
            <h2 class="text-xl font-semibold">Add Starline Game</h2>
            <button type="button" onclick="closeModal()">&times;</button>
          </div>

          <div class="p-6 space-y-4">
            <input
              name="gameName"
              required
              placeholder="Starline Game Name"
              class="w-full border px-4 py-2 rounded"
            />

            <input type="time" name="openTime"
              class="w-full border px-4 py-2 rounded" required />

            <input type="time" name="closeTime"
              class="w-full border px-4 py-2 rounded" required />
          </div>

          <div class="px-6 py-4 border-t text-right">
            <button class="bg-green-500 text-white px-6 py-2 rounded">
              Add Game
            </button>
          </div>
        </form>
      </div>

      <!-- EDIT MODAL -->
      <div id="editModal" class="fixed inset-0 hidden bg-black/40 flex items-center justify-center z-50">
        <form id="editForm" method="POST"
          class="bg-white w-full max-w-xl rounded shadow">
          <div class="px-6 py-4 border-b flex justify-between">
            <h2 class="text-xl font-semibold">Edit Starline Game</h2>
            <button type="button" onclick="closeEditModal()">&times;</button>
          </div>

          <div class="p-6 space-y-4">
            <input type="time" name="openTime" class="w-full border px-4 py-2 rounded">
            <input type="time" name="closeTime" class="w-full border px-4 py-2 rounded">

            <select name="isActive" class="w-full border px-4 py-2 rounded">
              <option value="Yes">Active</option>
              <option value="No">Inactive</option>
            </select>
          </div>

          <div class="px-6 py-4 border-t text-right">
            <button class="bg-green-600 text-white px-6 py-2 rounded">
              Update Game
            </button>
          </div>
        </form>
      </div>
    </main>

    <script>
      function changeLimit() {
        const limit = document.getElementById("pageLimit").value;
        window.location.href = `?page=1&limit=${limit}`;
      }
    </script>

    <script src="/js/sidebar.js"></script>
    <script src="/js/starlineDateTime.js"></script>
  </body>
</html>
