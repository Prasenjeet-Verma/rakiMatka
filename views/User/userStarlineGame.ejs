        }
      }
        .g-hide-scroll::-webkit-scrollbar { display: none; }
        .g-hide-scroll { -ms-overflow-style: none; scrollbar-width: none; }
        input[type=number]::-webkit-inner-spin-button, 
        input[type=number]::-webkit-outer-spin-button { -webkit-appearance: none; margin: 0; }
        
        .g-full-height {
            height: 100vh;
            height: -webkit-fill-available;
        }
        .tp-hidden {
            display: none !important;
        }

        .g-bg-teal { background-color: #005c4b; }
        .g-text-teal { color: #005c4b; }
        .g-border-teal { border-color: #005c4b; }
                /* Removes the up/down arrows from number inputs */
        input::-webkit-outer-spin-button,
        input::-webkit-inner-spin-button { -webkit-appearance: none; margin: 0; }
        input[type=number] { -moz-appearance: textfield; }
        .hidden { display: none; }
        #scroll-area::-webkit-scrollbar { display: none; }
        #scroll-area { -ms-overflow-style: none; scrollbar-width: none; }
        
        @keyframes slideIn {
            from { opacity: 0; transform: translateX(-10px); }
            to { opacity: 1; transform: translateX(0); }
        }
        .entry-anim { animation: slideIn 0.25s ease-out forwards; }
               /* Custom UI for Radio Markers */
        input[type="radio"]:checked + .radio-indicator {
            border-color: #005c4b;
        }
        input[type="radio"]:checked + .radio-indicator::after {
            content: "";
            display: block;
            width: 10px;
            height: 10px;
            background: #005c4b;
            border-radius: 50%;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

