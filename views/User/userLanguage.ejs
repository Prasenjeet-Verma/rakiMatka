<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Responsive Choose Language</title>
    
    <script src="https://cdn.tailwindcss.com"></script>
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700;900&display=swap" rel="stylesheet">

    <style>
        body { font-family: 'Inter', sans-serif; }
        /* Smooth scroll for the grid container */
        .custom-scroll::-webkit-scrollbar { width: 5px; }
        .custom-scroll::-webkit-scrollbar-thumb { background: #065f46; border-radius: 10px; }
    </style>
</head>
<body class="bg-gray-100 min-h-screen flex flex-col items-center">

    <main id="languageView" class="w-full lg:max-w-4xl min-h-screen flex flex-col bg-white shadow-2xl overflow-hidden">
        
    <!-- HEADER -->
    <header class="bg-teal-800 text-white px-4 py-5 rounded-b-3xl">
      <div class="flex items-center gap-3">
        <a href="/userdashboard"><i class="fa-solid fa-arrow-left text-xl cursor-pointer"></i></a>
        <h1 class="text-lg font-semibold">Choose language</h1>
      </div>
    </header>

        <div class="px-6 pt-6 text-center">
            <h2 class="text-gray-500 font-semibold text-sm md:text-base uppercase tracking-widest">Select your preferred language</h2>
        </div>

        <div class="p-6 grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-4 gap-4 md:gap-6 flex-1 overflow-y-auto custom-scroll">
            
            <div class="lang-card active-card cursor-pointer bg-teal-100 border-2 border-teal-700 rounded-2xl p-5 md:p-8 text-center shadow-md transition-all transform hover:translate-y-[-5px] active:scale-95">
                <h3 class="text-xl md:text-2xl font-black text-teal-900">ENGLISH</h3>
                <p class="text-xs font-black text-teal-700 mt-2">ENGLISH</p>
            </div>

            <div class="lang-card cursor-pointer bg-white border-2 border-gray-200 rounded-2xl p-5 md:p-8 text-center shadow-sm hover:border-teal-400 transition-all transform hover:translate-y-[-5px] active:scale-95">
                <h3 class="text-xl md:text-2xl font-black text-gray-800">हिंदी</h3>
                <p class="text-xs font-bold text-gray-400 mt-2">HINDI</p>
            </div>

            <div class="lang-card cursor-pointer bg-white border-2 border-gray-200 rounded-2xl p-5 md:p-8 text-center shadow-sm hover:border-teal-400 transition-all transform hover:translate-y-[-5px] active:scale-95">
                <h3 class="text-xl md:text-2xl font-black text-gray-800">বাংলা</h3>
                <p class="text-xs font-bold text-gray-400 mt-2">BANGLA</p>
            </div>

            <div class="lang-card cursor-pointer bg-white border-2 border-gray-200 rounded-2xl p-5 md:p-8 text-center shadow-sm hover:border-teal-400 transition-all transform hover:translate-y-[-5px] active:scale-95">
                <h3 class="text-xl md:text-2xl font-black text-gray-800">ಕನ್ನಡ</h3>
                <p class="text-xs font-bold text-gray-400 mt-2">KANNADA</p>
            </div>

            <div class="lang-card cursor-pointer bg-white border-2 border-gray-200 rounded-2xl p-5 md:p-8 text-center shadow-sm hover:border-teal-400 transition-all transform hover:translate-y-[-5px] active:scale-95">
                <h3 class="text-xl md:text-2xl font-black text-gray-800">తెలుగు</h3>
                <p class="text-xs font-bold text-gray-400 mt-2">TELUGU</p>
            </div>

            <div class="lang-card cursor-pointer bg-white border-2 border-gray-200 rounded-2xl p-5 md:p-8 text-center shadow-sm hover:border-teal-400 transition-all transform hover:translate-y-[-5px] active:scale-95">
                <h3 class="text-xl md:text-2xl font-black text-gray-800">ગુજરાતી</h3>
                <p class="text-xs font-bold text-gray-400 mt-2">GUJARATI</p>
            </div>

            <div class="lang-card cursor-pointer bg-white border-2 border-gray-200 rounded-2xl p-5 md:p-8 text-center shadow-sm hover:border-teal-400 transition-all transform hover:translate-y-[-5px] active:scale-95">
                <h3 class="text-xl md:text-2xl font-black text-gray-800">मराठी</h3>
                <p class="text-xs font-bold text-gray-400 mt-2">MARATHI</p>
            </div>

            <div class="lang-card cursor-pointer bg-white border-2 border-gray-200 rounded-2xl p-5 md:p-8 text-center shadow-sm hover:border-teal-400 transition-all transform hover:translate-y-[-5px] active:scale-95">
                <h3 class="text-xl md:text-2xl font-black text-gray-800">தமிழ்</h3>
                <p class="text-xs font-bold text-gray-400 mt-2">TAMIL</p>
            </div>
        </div>

        <div class="p-6 bg-white border-t border-gray-100 flex justify-center">
            <button class="w-full md:w-2/3 lg:w-1/2 bg-teal-800 text-white py-4 rounded-full text-xl font-black shadow-xl hover:bg-teal-900 active:bg-teal-950 transition-all uppercase tracking-widest">
                Continue
            </button>
        </div>
    </main>

    <script>
        // Interactive selection logic
        const cards = document.querySelectorAll('.lang-card');
        cards.forEach(card => {
            card.addEventListener('click', () => {
                // Reset all cards
                cards.forEach(c => {
                    c.classList.remove('bg-teal-100', 'border-teal-700', 'shadow-inner');
                    c.classList.add('bg-white', 'border-gray-200', 'shadow-sm');
                    c.querySelector('h3').classList.replace('text-teal-900', 'text-gray-800');
                    c.querySelector('p').classList.replace('text-teal-700', 'text-gray-400');
                });
                
                // Highlight selected card
                card.classList.add('bg-teal-100', 'border-teal-700', 'shadow-inner');
                card.classList.remove('bg-white', 'border-gray-200', 'shadow-sm');
                card.querySelector('h3').classList.replace('text-gray-800', 'text-teal-900');
                card.querySelector('p').classList.replace('text-gray-400', 'text-teal-700');
            });
        });
    </script>

</body>
</html>