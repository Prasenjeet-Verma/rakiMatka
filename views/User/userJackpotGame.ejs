          Jodi Digit
        </div>
      </div>
    </div>
  </div>


  <!-- ===================================== Left Digit ================================ -->
<main
  id="leftDigitGame"
  data-game-id="<%= game._id %>"
  data-game-name="<%= game.gameName %>"
  data-open-time="<%= todaySchedule ? todaySchedule.openTime : '' %>"
  class="bg-white min-h-screen flex flex-col hidden fixed top-0 w-full">

  <!-- HEADER -->
  <header class="bg-teal-800 text-white px-4 py-5 rounded-b-3xl">
    <div class="flex items-center gap-3">
      <i id="closeJodiDigitBulk" class="fa-solid fa-arrow-left text-xl cursor-pointer"></i>
      <h1 class="text-lg font-semibold">
        Left Digit - <%= game.gameName %>
      </h1>
    </div>
  </header>

  <!-- FORM -->
  <div class="px-5 pt-8 space-y-6 flex-1 overflow-y-auto">

    <!-- OPEN DIGIT -->
    <div class="flex justify-between items-center">
      <h2 class="text-xl font-bold">Open Digit</h2>
      <input
        id="leftDigit_openDigit"
        type="text"
        placeholder="0-9"
        class="w-40 px-4 py-3 border rounded-xl font-bold
        disabled:bg-gray-200 disabled:cursor-not-allowed"/>
    </div>

    <!-- POINTS -->
    <div class="flex justify-between items-center">
      <h2 class="text-xl font-bold">Points</h2>
      <input
        id="leftDigit_points"
        type="number"
        class="w-40 px-4 py-3 border rounded-xl font-bold
        disabled:bg-gray-200 disabled:cursor-not-allowed"/>
    </div>

    <!-- ADD -->
    <div class="flex justify-end">
      <button
        id="leftDigit_addBtn"
        class="bg-teal-800 text-white px-16 py-3 rounded-xl font-bold
        disabled:opacity-50 disabled:cursor-not-allowed">
        Add
      </button>
    </div>

    <!-- TABLE -->
    <table class="w-full text-center border mt-6">
      <thead class="bg-gray-100 font-bold">
        <tr>
          <td>Open Digit</td>
          <td>Points</td>
          <td>Action</td>
        </tr>
      </thead>
      <tbody id="leftDigitLiveBets"></tbody>
    </table>

    <!-- SUBMIT -->
    <div class="flex justify-center pt-6">
      <button
        id="leftDigit_submitBtn"
        class="bg-green-600 text-white px-20 py-4 rounded-xl font-bold
        disabled:opacity-50 disabled:cursor-not-allowed">
        Submit
      </button>
    </div>
  </div>

  <!-- BOTTOM BAR -->
  <div class="border-t py-4">
    <div class="flex justify-around font-bold text-center">
      <div>
        Bids
        <div id="leftDigit_totalBids">0</div>
      </div>
      <div>
        Amount
        <div id="leftDigit_totalAmount">0</div>
      </div>
    </div>
  </div>
</main>



