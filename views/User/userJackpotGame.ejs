  <!-- Tailwind CDN -->
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
  <style type="text/tailwindcss">
    @layer components {
        /* Custom Digit Card Style */
        .digit-card {
          @apply relative basis-[30%] aspect-[4/3] bg-[#005c4b] text-white rounded-xl 
                       flex items-center justify-center text-3xl font-medium shadow-md 
                       cursor-pointer transition-all active:scale-95 select-none;
        }
        /* The small bet amount badge */
        .badge {
          @apply absolute top-1 right-2 sm:top-2 sm:right-3 text-[10px] sm:text-xs opacity-80 font-normal;
        }
      }
      .g-hide-scroll::-webkit-scrollbar {
        display: none;
      }
      .g-hide-scroll {
        -ms-overflow-style: none;
        scrollbar-width: none;
      }
      input[type="number"]::-webkit-inner-spin-button,
      input[type="number"]::-webkit-outer-spin-button {
        -webkit-appearance: none;
        margin: 0;
      }

      .g-full-height {
        height: 100vh;
        height: -webkit-fill-available;
      }
      .tp-hidden {
        display: none !important;
      }

      .g-bg-teal {
        background-color: #005c4b;
      }
      .g-text-teal {
        color: #005c4b;
      }
      .g-border-teal {
        border-color: #005c4b;
      }
      /* Removes the up/down arrows from number inputs */
      input::-webkit-outer-spin-button,
      input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
      }
      input[type="number"] {
        -moz-appearance: textfield;
      }
      .hidden {
        display: none;
      }
      #scroll-area::-webkit-scrollbar {
        display: none;
      }
      #scroll-area {
        -ms-overflow-style: none;
        scrollbar-width: none;
      }

      @keyframes slideIn {
        from {
          opacity: 0;
          transform: translateX(-10px);
        }
        to {
          opacity: 1;
          transform: translateX(0);
        }
      }
      .entry-anim {
        animation: slideIn 0.25s ease-out forwards;
      }
      /* Custom UI for Radio Markers */
      input[type="radio"]:checked + .radio-indicator {
        border-color: #005c4b;
      }
      input[type="radio"]:checked + .radio-indicator::after {
        content: "";
        display: block;
        width: 10px;
        height: 10px;
        background: #005c4b;
        border-radius: 50%;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
      }
    </style>
</head>

<body class="bg-white">
