        </h1>
      </div>
    </header>

    <!-- FORM AREA -->
    <div class="px-5 pt-8 space-y-8 flex-1 overflow-y-auto">

      <!-- OPEN DIGIT -->
      <div class="flex justify-between items-center">
        <h2 class="text-xl font-bold text-gray-900">Open Digit</h2>
        <input type="number" placeholder="Enter Digit"
          class="w-52 px-4 py-3 rounded-xl shadow-md border border-gray-200 focus:outline-none focus:ring-2 focus:ring-teal-700 font-semibold" />
      </div>

      <!-- POINTS -->
      <div class="flex justify-between items-center">
        <h2 class="text-xl font-bold text-gray-900">Points</h2>
        <input type="number" placeholder="Enter Point"
          class="w-52 px-4 py-3 rounded-xl shadow-md border border-gray-200 focus:outline-none focus:ring-2 focus:ring-teal-700 font-semibold" />
      </div>

      <!-- ADD BUTTON -->
      <div class="flex justify-end pt-6">
        <button id="addBetBtn"
          class="bg-teal-800 text-white text-xl font-bold px-20 py-4 rounded-2xl shadow-lg active:scale-95 transition">
          Add
        </button>
      </div>

      <!-- LIVE BETS LIST -->
      <div id="liveBetsContainer" class="space-y-2 mt-6">
        <!-- Added bets will appear here -->
      </div>

    </div>

    <!-- BOTTOM BAR -->
    <div class="border-t-2 border-teal-800 bg-white py-4">
      <div class="flex justify-around text-center font-semibold text-lg">
        <div>
          <div>Bids</div>
          <div id="bidsCount" class="text-gray-600">0</div>
        </div>
        <div>
          <div>Amount</div>
          <div id="amountTotal" class="text-gray-600">0</div>
        </div>
      </div>
      <!-- SUBMIT BUTTON -->
      <div class="flex justify-center mt-4">
        <button id="submitBetBtn"
          class="bg-green-600 text-white text-xl font-bold px-20 py-4 rounded-2xl shadow-lg active:scale-95 transition">
          Submit
        </button>
      </div>
    </div>
  </main>


