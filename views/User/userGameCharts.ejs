    <script>
      const views = {
        selection: document.getElementById("selection-view"),
        matka: document.getElementById("matka-detail-view"),
        starline: document.getElementById("starline-view"),
        jackpot: document.getElementById("jackpot-view"),
        sitaMorning: document.getElementById("sita-morning-chart"),
      };

      function showView(viewId) {
        Object.values(views).forEach((v) => v.classList.add("hidden"));
        views[viewId].classList.remove("hidden");
        window.scrollTo(0, 0);
      }

      // Sidebar Navigation
      document
        .getElementById("open-matka")
        .addEventListener("click", () => showView("matka"));
      document
        .getElementById("open-starline")
        .addEventListener("click", () => showView("starline"));
      document
        .getElementById("open-jackpot")
        .addEventListener("click", () => showView("jackpot"));

      // Open Sita Morning Chart
      document.querySelectorAll(".btn-sita-morning").forEach((btn) => {
        btn.addEventListener("click", () => showView("sitaMorning"));
      });

      // Back to Home
      document.querySelectorAll(".back-to-home").forEach((btn) => {
        btn.addEventListener("click", () => showView("selection"));
      });

      // Back to Matka List
      document.querySelectorAll(".back-to-matka").forEach((btn) => {
        btn.addEventListener("click", () => showView("matka"));
      });
