<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Profile</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
  </head>
  <body class="bg-gray-100 min-h-screen">
    <header class="bg-teal-800 text-white px-4 py-5 rounded-b-3xl">
      <div class="flex items-center gap-3">
        <a href="/userDashboard">
          <i class="fa-solid fa-arrow-left text-xl cursor-pointer"></i>
        </a>
        <h1 class="text-lg font-semibold">My Profile</h1>
      </div>
    </header>
 <% if (flash) { %>
  <div id="flashMessage"
  style="width: 100%;"
    class="fixed top-5 left-1/2 -translate-x-1/2 px-6 py-3 rounded-lg text-white text-sm shadow-lg
    <%= flash.type === 'success' ? 'bg-green-600' : 'bg-red-600' %>">
    <%= flash.message %>
  </div>

  <script>
    setTimeout(() => {
      const el = document.getElementById("flashMessage");
      if (el) el.style.display = "none";
    }, 1000); // ‚è± 1 second
  </script>
<% } %>
    <div class="p-4">
      <div class="bg-white rounded-2xl shadow-lg p-6">
        <div class="flex justify-center relative">
          <div
            class="w-24 h-24 bg-yellow-500 rounded-full flex items-center justify-center text-white text-4xl font-bold shadow-md"
          >
            <%= user && user.username ? user.username[0].toUpperCase() : "?" %>
          </div>

          <button
            id="openModal"
            class="absolute right-0 top-10 flex items-center space-x-1 text-gray-700 hover:text-emerald-700 transition"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-5 h-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15.232 5.232l3.536 3.536M9 11l6-6m2 2l-6 6m-3 3h3l9-9a2.121 2.121 0 00-3-3l-9 9v3z"
              />
            </svg>
            <span class="text-sm font-medium">Edit Profile</span>
          </button>
        </div>

        <div class="mt-8 space-y-4">
          <div class="bg-gray-100 rounded-xl p-4 shadow-sm">
            <p class="text-gray-600 text-sm font-medium">Username</p>
            <p class="text-lg font-semibold text-gray-900"><%= user ? user.username : '' %></p>
          </div>

          <div class="bg-gray-100 rounded-xl p-4 shadow-sm">
            <p class="text-gray-600 text-sm font-medium">Mobile</p>
            <p class="text-lg font-semibold text-gray-900"><%= user ? user.phoneNo : '' %></p>
          </div>

        </div>
      </div>
    </div>

    <div
      id="modalOverlay"
      class="fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center hidden p-4"
    >
      <div
        class="bg-white rounded-2xl shadow-2xl w-full max-w-md overflow-hidden animate-in fade-in zoom-in duration-300"
      >
        <div
          class="bg-teal-800 p-4 text-white flex justify-between items-center"
        >
          <h2 class="text-xl font-bold">Edit Profile</h2>
          <button id="closeModal" class="text-white hover:text-gray-200">
            <i class="fa-solid fa-xmark text-2xl"></i>
          </button>
        </div>
        <form action="/usereditdetails" method="post" class="p-6 space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1"
              >Username</label
            >
            <input
              type="text"
              value="<%= oldInput?.username || user.username %>" 
              name="username"
              class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-teal-500 focus:outline-none"
            />
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1"
              >Mobile</label
            >
            <input
              type="tel"
              value="<%= oldInput?.phoneNo || user.phoneNo %>"
              name="phoneNo"
              class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-teal-500 focus:outline-none"
            />
          </div>

          <div class="flex gap-3 pt-4">
            <button
              type="button"
              id="cancelBtn"
              class="flex-1 bg-gray-200 text-gray-800 py-2 rounded-lg font-semibold hover:bg-gray-300 transition"
            >
              Cancel
            </button>
            <button
              type="submit"
              class="flex-1 bg-teal-800 text-white py-2 rounded-lg font-semibold hover:bg-teal-900 transition"
            >
              Save Changes
            </button>
          </div>
        </form>
      </div>
    </div>

    <script>
      const modal = document.getElementById("modalOverlay");
      const openBtn = document.getElementById("openModal");
      const closeBtn = document.getElementById("closeModal");
      const cancelBtn = document.getElementById("cancelBtn");

      // Function to open modal
      openBtn.addEventListener("click", () => {
        modal.classList.remove("hidden");
      });

      // Function to close modal
      const closeModal = () => {
        modal.classList.add("hidden");
      };

      closeBtn.addEventListener("click", closeModal);
      cancelBtn.addEventListener("click", closeModal);

      // Close modal when clicking outside the white box
      window.addEventListener("click", (e) => {
        if (e.target === modal) {
          closeModal();
        }
      });
    </script>
  </body>
</html>
